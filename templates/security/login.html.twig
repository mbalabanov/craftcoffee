{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-4 offset-md-4">

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as <strong>{{ app.user.username }}</strong>. <a href="{{ path('app_logout') }}" class="btn btn-warning">Logout</a>
                        </div>
                    {% endif %}
                    <div class="row mt-2 mb-4">
                        <div class="col-md-12">
                            <h2>Please sign in</h2>
                            <a href="{{ path('product_index') }}" class="btn btn-warning">Back to Products</a>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"> 
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="row mt-2">
                        <div class="col-md-12"> 
                            <button class="btn btn-warning mt-4" type="submit">Login</button>
                        </div>
                    </div>
                </form>

        </div>
    </div>
</div>

<div class="container-fluid">
    <img src="assets/img/coffee/login.jpg" alt="Login to our world of coffee" class="img-fluid">
</div>
{% endblock %}
