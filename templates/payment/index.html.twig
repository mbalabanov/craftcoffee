{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <h2 class="mb-4">External Payment Provider</h2>
            <h4>You will now be redirected to our payment provider.</h4>
            <p><img src="/assets/img/payment-providers.png" class="img-fluid" alt="Our selection of payment providers"></p>
        </div>
    </div>

    <div class="row">  
        <div class="col-md-6 text-start">
            <a class="btn btn-primary btn-lg my-2" href="/submitted/order">&#8592 Back to Summary</a>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-primary btn-lg my-2" href="{{ path('submitted_order_pay', {'shoppingCartId': currentshoppingcart.shoppingCartId}) }}">&#10004;&nbsp;Finish Payment</a>
        </div>
    </div>
</div>


{% endblock %}
